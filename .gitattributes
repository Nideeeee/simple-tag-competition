# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# JSON
*.json text eol=lf

# Markdown
*.md text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# HTML/CSS
*.html text eol=lf
*.css text eol=lf

# Model files (binary)
*.pth binary
*.pt binary
*.pkl binary
*.pickle binary

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
